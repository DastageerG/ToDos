<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardBackgroundColor="@android:color/transparent"
    app:cardCornerRadius="11dp"
    android:layout_margin="4dp"

    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="1dp"
        android:background="@drawable/layout_bg"
        >
        <androidx.cardview.widget.CardView
            android:id="@+id/layoutToDoItemsPriorityIndicator"
            android:layout_width="15dp"
            android:layout_height="15dp"
            app:cardCornerRadius="100dp"
            app:cardBackgroundColor="@color/blue"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="16dp"
            />
        <TextView
            android:id="@+id/textViewLayoutToDoItemsTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_toStartOf="@id/layoutToDoItemsPriorityIndicator"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="16dp"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:text="@string/title"
            />

        <TextView
            android:id="@+id/textViewLayoutToDoItemsDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/textViewLayoutToDoItemsTitle"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="16dp"
            android:text="@string/description"
            android:textSize="16sp"
            android:textColor="@android:color/black"
            android:maxLines="10"
            android:maxLength="300"

            />


    </RelativeLayout>

</androidx.cardview.widget.CardView>